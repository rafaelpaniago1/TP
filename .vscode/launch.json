{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug tp2.out",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tp2.out", // Adjust path as necessary
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb" // Set path to gdb executable if not in default location
        }
    ]
}
